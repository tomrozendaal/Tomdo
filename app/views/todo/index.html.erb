<h1>Todo#index</h1>
<p>Find me in app/views/todo/index.html.erb</p>

<table>
	<tr class="header">
		<th>Priority</th>
		<th>Date</th>
		<th>Title</th>
		<th width="60"></th>
	</tr>
	<% @tasks.each_with_index do |task,index| %>
		<% case index%2 %>
			<% when 0 %>
				<tr class="odd">
			<% when 1 %>
				<tr class="even">
		<% end %>
		<% case task.priority %>
			<% when 1 %>
				<td>High</td>
			<% when 2 %>
				<td>Medium</td>
			<% when 3 %>
				<td>Low</td>
		<% end %>		
			<td><%= task.date[1] + '/' + task.date[0] + '/' + task.date[2] %></td>
			<td><%= task.title %></td>
			<td><%= button_to "", { :action => "destroy", :id => task.id },:confirm => "Are you sure?", :method => :delete, :class => "buttonDelete" %>
				<%= button_to "", { :action => "edit", :id => task.id}, :method => :get, :class => "buttonEdit" %>
			</td>		
		</tr>
	<% end %>
</table>
<div id="new_task_link">
	<%= link_to(new_todo_path) do %>
	  <%= image_tag "new.png" %>
	<% end %>
</div>